.my-wrapper {
    width: 100%;
    padding-bottom: 48rpx;
    overflow: hidden;
    box-sizing: border-box;
}

.card-box {
    width: 100%;
    padding: 32rpx 0 32rpx 32rpx;
    margin-top: 10rpx;
    background-color: #fff;
}

.card-intro-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
   
    padding: 16rpx 92rpx 48rpx 60rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.intro-img-logo {
    width: 100%;
    height: 88rpx;
}

.split-line {
    width: 1px;
    height: 40rpx;
    background-color: rgba(0, 0, 0, 0.3);
    margin-left: -100rpx;
}

.card-title {
    width: 100%;
    margin-bottom: 32rpx;
    padding-bottom: 8rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
    font-size: 28rpx;
    color: #7f7f7f;
    font-weight: 400;
}

.card-content {
    width: 100%;
     margin-top: 30rpx;
    padding-right: 32rpx;
    font-size: 28rpx;
    color: #333;
    font-weight: 400;
    line-height: 40rpx;
    text-align: justify;
}

.line {
    padding: 16rpx 0;
}

.font-bold {
    font-weight: 500;
}
