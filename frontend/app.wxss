/**app.wxss**/
view,
text,
image,
form,
input {
    box-sizing: border-box;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

page {
    width: 100%;
    height: 100%;
    background-color: #f5f5f9;
    /* 红色 */
    --themeRedColor: #ff605c;
    /* 橘色 */
    --themeOrangeColor: #f78532;
    /* 绿色 */
    --themeGreenColor: #07c160;
    /* 浅灰色 */
    --themeLightGrayColor: #e1e6f6;
    /* 暗蓝色 */
    --themeDarkBlueColor: #3c97cc;
}

/* 标签组合 */
.item-tag-box {
    display: flex;
}

.tag-item {
    padding: 4rpx 16rpx;
    border-radius: 28rpx;
    font-size: 24rpx;
    margin-right: 18rpx;
}

.tag-type,
.tag-person {
    background: var(--themeLightGrayColor);
    color: #333;
}

.tag-level {
    color: #fff;
}

.level-one {
    background: var(--themeRedColor);
}

.level-two {
    background: var(--themeOrangeColor);
}

.level-three {
    background: var(--themeDarkBlueColor);
}

.level-four {
    background: var(--themeGreenColor);
}

/* 无更多数据提示 */
.load-all-box {
    width: 100%;
    height: 80rpx;
    padding-top: 12rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 24rpx;
    color: #ccc;
}

/* 禁用文字 */
.disabled-text {
    color: #bbbbbb !important;
}

/* 绿色提示文本 */
.green-notice {
    font-size: 24rpx;
    font-weight: 400;
    color: var(--themeGreenColor) !important;
}
